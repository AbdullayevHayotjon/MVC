@model CarViewModel

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Year</th>
            <th>Type</th>
            <th>Company Name</th>
            <th>Model</th>
            <th>Price</th>
            <th>Condition</th>
            <th>Car Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.year.Count; i++)
        {
            <tr>
                <td>@Model.year[i]</td>
                <td>@Model.car_type[i]</td>
                <td>@Model.companyName[i]</td>
                <td>@Model.model[i]</td>
                <td>@Model.price[i]</td>
                <td>@Model.car_condition[i]</td>
                <td>
                    <img src="@Model.car_image_url[i]" alt="Car Image" style="max-width: 200px;" />
                </td>
                <td>
                    <a href="@Url.Action("Edit", "CarAdmin", new { id = i })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "CarAdmin", new { id = i })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
