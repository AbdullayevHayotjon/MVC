@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="card" style="margin-top: 50px;">
    <div class="card-body">
        <h2 class="card-title text-center">LOGIN Car Admin</h2>
        <form method="post" asp-action="CheckLogin" class="forms-sample">
            <div class="form-group">
                <label for="exampleInputUsername1">Username</label>
                <input type="text" name="login" class="form-control" id="exampleInputUsername1" placeholder="Username">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" name="pass" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary btn-block" style="background-color: #007bff; color:white;">Login</button>
        </form>
        <div class="text-center mt-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-link" style="color: #007bff;">Men admin emasman</a>
        </div>
    </div>
</div>
